<!DOCTYPE html>
<html>
	<head>
		<title>Docker Automation</title>
    	<%= csrf_meta_tags %>
    	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  	</head>

  	<body>
	  	<div>
	    	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	      		<div class="container-fluid">
	        		<div class="collapse navbar-collapse" id="bs-navbar-collapse">
	          			<ul class="nav navbar-nav">
	          				<li><%= link_to content_tag(:span, "Home", :class => "fa fa-home", :'aria-hidden' => "true"), '/' %></li>
	          				<li><%= link_to content_tag(:span, "Containers", :class => "fa fa-archive", :'aria-hidden' => "true"), containers_index_path %></li>
	            			<li><%= link_to content_tag(:span, "Images", :class => "fa fa-file-image-o", :'aria-hidden' => "true"), images_index_path %></li>
	            			<li><%= link_to content_tag(:span, "DockerFiles", :class => "fa fa-file-text", :'aria-hidden' => "true"), '/dockerfiles' %></li>
	          			</ul>
	        		</div>
	      		</div>
			</nav>
			<div class="row">
	      		<div class="col-lg-12" style="margin-top: 60px;">
	        		<%= render 'shared/messages' %>
	        		<%= yield %>
	      		</div>
	    	</div>
		</div>
  	</body>
</html>